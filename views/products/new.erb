<form action="/products" method="post"role="form">
 <div class="form-group">
   <label for="product_name">Name:</label>
   <br>
   <input id="product_name" class="form-control" name="product[name]" type="text" value="<%= @product.name %>" />
 </div>
 <div class="form-group">
   <label for="product_price">Price:</label>
   <br>
   <input id="product_price" name="product[price]" class="form-control" type="number" value="<%= @product.price %>"/>
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form> 